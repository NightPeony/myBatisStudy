    <!--数据库供应商  mysql oracle等  和上面开发环境不一样-->
    <databaseIdProvider type="DB_VENDOR">
        <property name="MySQL" value="mysql" />
        <property name="Oracle" value="oracle" />
    </databaseIdProvider>

  <!--数据库厂商标示 -->
<!--       <databaseIdProvider></>-->
  <!-- 映射器 -->
    <mappers>
        <mapper resource="mapper/MybatisTestMapper.xml"/>
    </mappers>
</configuration>
