<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

  <!--常量设置-->
   <properties>
     <property name="test" value="123"/>
   </properties>

    <!--设置-->
    <settings>
    <!-- 打印sql日志 -->
       <setting name="logImpl" value="STDOUT_LOGGING" />
        <!--是否打开缓存  打开全局缓存(打开二级缓存)-->
        <setting name="cacheEnabled" value="true"/>
        <!--共享缓存范围(session)-->
        <setting name="cacheEnabled" value="SESSION"/>
    </settings>

    <!--别名-->
    <typeAliases>
      <typeAlias type="niwo.data.mybatis.MybatiesPo" alias="MybatiesPo"></typeAlias>
    </typeAliases>

    <plugins>
      <plugin interceptor="niwo.myInterface.MybatisInterface"></plugin>
    </plugins>

    <!--类型处理器-->
<!--    <typeHandlers>-->
<!--      <typeHandler handler=""></typeHandler>-->
<!--    </typeHandlers>-->
    <!--对象工厂 -->
<!--    <objectFactory></objectFactory>-->
    <!--插件 -->
<!--    <plugins></plugins>-->
    <!--开发环境  可以多个环境开发-->
    <environments default="developer">
        <environment id="developer">
            <transactionManager type="JDBC"></transactionManager>
                <dataSource type="POOLED">
                      <!--属性名如何查找，看源码类中的set方法  -->
                      <property name="driver" value="com.mysql.jdbc.Driver"></property>
                      <property name="url" value="jdbc:mysql://recycle2014.mysql.rds.aliyuncs.com:3306/minibox?useSSL=false"></property>
                      <property name="username" value="backendapi_test"></property>
                      <property name="password" value="epbox_2018"></property>
                </dataSource>
        </environment>
        <environment id="myself">
            <transactionManager type="JDBC"></transactionManager>
                <dataSource type="POOLED">
                    <!--属性名如何查找，看源码类中的set方法  -->
                    <property name="driver" value="com.mysql.jdbc.Driver"></property>
                    <property name="url" value="jdbc:mysql://www.niwo.site:3306/hell?useSSL=false"></property>
                    <property name="username" value="hb"></property>
                    <property name="password" value="678954hb"></property>
                </dataSource>
